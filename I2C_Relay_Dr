#include <Wire.h>

// --- KONFIGURACJA I2C ---
#define I2C_SLAVE_ADDR 0x02
#define INTERRUPT_PIN 4
#define SDA_1 21
#define SCL_1 22

// --- PRZEKAŹNIKI ---
const int relayPins[] = {13, 14, 27, 26, 16, 33, 32, 23, 12, 17, 19, 18};
const int numRelays = sizeof(relayPins) / sizeof(relayPins[0]);
uint16_t relayStates = 0;

void toggleRelay(int index) {
  if (index < numRelays) {
    int pin = relayPins[index];
    bool newPinState = !digitalRead(pin);
    digitalWrite(pin, newPinState);
    
    bool isLightOn = (newPinState == LOW);

    if (isLightOn) {
      relayStates |= (1 << index);  // Ustaw bit na 1
    } else {
      relayStates &= ~(1 << index); // Ustaw bit na 0
    }

  }
}

// --- OBSŁUGA I2C ---
void receiveEvent(int howMany) {
  while (Wire.available()) {
    byte relayIndex = Wire.read();
    toggleRelay(relayIndex);
  }
  digitalWrite(INTERRUPT_PIN, LOW);
  delayMicroseconds(50);
  digitalWrite(INTERRUPT_PIN, HIGH);
}

void setup() {
  Serial.begin(115200);

  // Konfiguracja pinów
  for (int i = 0; i < numRelays; i++) {
    pinMode(relayPins[i], OUTPUT);
    digitalWrite(relayPins[i], HIGH);
  }
  pinMode(INTERRUPT_PIN, OUTPUT);
  digitalWrite(INTERRUPT_PIN, HIGH);

  // I2C Slave
  Wire.begin(I2C_SLAVE_ADDR, SDA_1, SCL_1, 400000);
  Wire.onReceive(receiveEvent);

  relayStates = 0;
}

void loop() {
}
